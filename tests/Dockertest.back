FROM node:16-alpine as node

RUN mkdir /dist
COPY ./www/package.json /dist/package.json
COPY ./www/yarn.lock /dist/yarn.lock
WORKDIR /dist
RUN yarn
COPY ./www /dist
RUN yarn build

FROM golang:1.18 AS go
RUN apt update -y && apt install libreoffice -y

RUN mkdir /app
COPY go.mod /app
COPY go.sum /app
WORKDIR /app
RUN go mod download

COPY pkg /app/pkg
COPY cmd /app/cmd
COPY internal /app/internal

COPY --from=node /dist/public/ ./www/public

RUN chmod -R a+rwX /app
ENV CGO_ENABLED=0
RUN mkdir -p /go/tmp
ENV TMPDIR=/go/tmp
ENV GIN_MODE=test
RUN chmod -R a+rwX /go/tmp
CMD ["go", "test", "./...", "-coverprofile", "cover.out"]